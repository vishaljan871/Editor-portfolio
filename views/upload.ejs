  <script>
    document.getElementById('uploadForm').addEventListener('submit', function(e) {
      e.preventDefault(); // Temporarily prevent form submission
      
      // Get the YouTube URL
      const youtubeUrl = document.getElementById('YouTubeUrl').value;
      
      // Convert to embed URL
